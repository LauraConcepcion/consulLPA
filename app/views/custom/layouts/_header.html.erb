<header>
  <div class="top-links hide-for-small-only">
    <div class="row">
      <div class="float-right social">
        <%= render Layout::SocialComponent.new %>
      </div>
      <div class="hide-for-small-only float-right">
        <%= render "shared/top_links" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="top-bar">

      <span data-responsive-toggle="responsive-menu" data-hide-for="medium" class="float-right">
        <button type="button" class="menu-button" data-toggle>
          <span class="menu-icon dark"></span>
          <%= t("application.menu") %>
        </button>
      </span>

      <%= link_to root_path, accesskey: "0", class: "logo show-for-small-only" do %>
        <%= image_tag(image_path_for("logo_header.png"), alt: setting["org_name"]) %>
      <% end %>
      <div id="responsive-menu">
        <div class="top-bar-title medium-2 hide-for-small-only">
          <%= link_to root_path, class: "hide-for-small-only", accesskey: "0" do %>
            <%= image_tag(image_path_for("logo_header.png"), class: "hide-for-small-only", alt: setting["org_name"]) %>
          <% end %>
        </div>
        <div class="medium-7 column">
          <div class="medium-9 small-12 column ">
            <div class="top-bar-right">
              <ul class="menu float-right" data-responsive-menu="medium-dropdown">
                <%= render "shared/admin_login_items" %>
                <%= render "layouts/notification_item" %>
                <%= render "devise/menu/login_items" %>
              </ul>
            </div>
          </div>
          <div class="medium-3 column margin-small">
            <%= link_to t("layouts.header.external_link_town_hall"), target: "_blank", class: "hide-for-small-only" do %>
              <%= image_tag(image_path_for("logo_lpa.jpg"), alt: t("layouts.header.logo_town_hall")) %>
            <% end %>
            <div class="show-for-small-only row">
              <div class="subnavigation row">
                <%= render "shared/subnavigation" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div id="navigation_bar" class="subnavigation expanded">
    <div class="row">
      <div class="hide-for-small-only">
        <%= render "shared/subnavigation" %>
      </div>
      <div class="small-12 medium-3 column">
        <%= yield :header_addon %>
      </div>
    </div>
  </div>
</header>
